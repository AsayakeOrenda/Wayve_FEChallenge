{{>headerbar}}
<div class="container">
    <h1>Wayve Challenge Portal</h1>
    <hr/>
    <!--Nav Bar-->
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="btn-group btn-group-justified" role="group" aria-label="top-nav" id="top-nav">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default active" id="view-map-btn">View Map</button>
                </div>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default" id="view-chart-btn">View Charts</button>
                </div>
            </div>
        </div>
    </div>
    <hr/>
    <div class="content-main">
        {{!-- Map Section --}}
        <div id="view-map-content">
            <h3 class="title">View Map</h3>
            <hr/>
            <div id="map-area"></div>
            <div class="map-key">
                <h4>Key:</h4>
                <div id="map-key-contents"></div>
            </div>
            <hr/>
            <div id="map-options">
                <div class="center-this">
                    <label> Map Options:
                        <div class="btn-group" id="map-btn-options" role="group" aria-label="map-options" >
                            <button type="button" class="btn btn-default active" id="map-show-actions">Highlight Actions</button>
                            <button type="button" class="btn btn-default" id="map-show-reasons">Highlight Reasons</button>
                        </div>
                    </label>
                </div>
            </div>
        </div>
        {{!-- Chart Section --}}
        <div id="view-chart-content">
            <h3 class="title">View Data</h3>
            <hr/>
            <div class="table">
                <table class="table table-bordered" style="margin: 0 auto;">
                    <thead>
                        <tr>
                            <th>Reason</th>
                            <th>Vehicle</th>
                            <th>Signal</th>
                            <th>Cyclist</th>
                            <th>Pedestrian</th>
                            <th>Parked Vehicle</th>
                            <th>Roadworks</th>
                            <th>Other Static</th>
                            <th>Other Dynamic</th>
                        </tr>
                    </thead>
                    <tbody class="list-chart-data">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
