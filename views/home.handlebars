{{>headerbar}}
<div class="container">
    <h1>Wayve Challenge Portal</h1>
    <hr/>
    <!--Nav Bar-->
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="btn-group btn-group-justified" role="group" aria-label="top-nav" id="top-nav">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default active" id="view-map-btn">View Map</button>
                </div>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default" id="view-chart-btn">View Charts</button>
                </div>
            </div>
        </div>
    </div>
    <hr/>
    <div class="content-main">
        {{!-- Map Section --}}
        <div id="view-map-content">
            <h3 class="title">View Map</h3>
            <hr/>
            <div id="map-area-action"></div>
            <div id="map-area-reason"></div>
            <div class="map-key-div">
                <h4 style="margin-top:0;">Key:</h4>
                <div id="map-key-contents">
                    <div id="map-key-actions" class="map-key">
                        <ul>
                            <li><div class="key-box action-stop"></div>Stop</li>
                            <li><div class="key-box action-giveway"></div>Give Way</li>
                            <li><div class="key-box action-follow"></div>Follow</li>
                            <li><div class="key-box action-overtake"></div>Overtake</li>
                            <li><div class="key-box action-undertake"></div>Undertake</li>
                            <li><div class="key-box action-join"></div>Join</li>
                            <li><div class="key-box action-negotiation"></div>Negotiation</li>
                            <li><div class="key-box action-park"></div>Park</li>
                            <li><div class="key-box action-emergencymaneuver"></div>Emergency Maneuver</li>
                        </ul>
                    </div>
                    <div id="map-key-reasons" class="map-key">
                        <ul>
                            <li><div class="key-box reason-vehicle"></div>Vehicle</li>
                            <li><div class="key-box reason-signal"></div>Signal</li>
                            <li><div class="key-box reason-cyclist"></div>Cyclist</li>
                            <li><div class="key-box reason-pedestrian"></div>Pedestrian</li>
                            <li><div class="key-box reason-parkedvehicle"></div>Parked Vehicle</li>
                            <li><div class="key-box reason-roadworks"></div>Roadworks</li>
                            <li><div class="key-box reason-otherstatic"></div>Other Static</li>
                            <li><div class="key-box reason-otherdynamic"></div>Other Dynamic</li>
                        </ul>
                    </div>
                </div>
            </div>
            <hr/>
            <div id="map-options">
                <div class="center-this">
                    <label> Map Options:
                        <div class="btn-group" id="map-btn-options" role="group" aria-label="map-options" >
                            <button type="button" class="btn btn-default active" id="map-show-actions">Highlight Actions</button>
                            <button type="button" class="btn btn-default" id="map-show-reasons">Highlight Reasons</button>
                        </div>
                    </label>
                </div>
            </div>
        </div>
        {{!-- Chart Section --}}
        <div id="view-chart-content">
            <h3 class="title">View Data</h3>
            <hr/>
            <h3>Action: Emergency Stop</h3>
            <p>Number of occurances for Emergency stop action by reason:</p>
            <div class="table">
                <table class="table table-bordered" style="margin: 0 auto;">
                    <thead>
                        <tr>
                            <th>Reason</th>
                            <th>Vehicle</th>
                            <th>Signal</th>
                            <th>Cyclist</th>
                            <th>Pedestrian</th>
                            <th>Parked Vehicle</th>
                            <th>Roadworks</th>
                            <th>Other Static</th>
                            <th>Other Dynamic</th>
                        </tr>
                    </thead>
                    <tbody class="list-chart-data">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
